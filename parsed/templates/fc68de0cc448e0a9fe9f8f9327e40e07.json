{"components/cart/coupon-codes":"{{inject 'couponCodeEmptyInput' (lang 'cart.coupon_codes.error')}}\n\n<aside class=\"cart-totals-block cart-totals-coupons\" data-coupon-codes>\n  <h2 class=\"cart-block-title\">{{lang 'cart.coupon_codes.coupon_code'}}</h2>\n\n  {{#if cart.coupons}}\n    {{#each cart.coupons}}\n      {{lang 'cart.coupon_codes.label' code=code}}\n      <a href=\"{{remove_url}}\">({{lang 'cart.coupon_codes.remove'}})</a>\n      {{discount.formatted}}\n    {{/each}}\n  {{/if}}\n\n  <div>\n    <p>{{lang 'cart.coupon_codes.enter_code'}}</p>\n\n    <form class=\"form\" method=\"post\" action=\"{{urls.cart}}\" data-coupon-code-form>\n        <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n        <button class=\"button\" type=\"submit\">\n          {{lang 'cart.coupon_codes.submit'}}\n        </button>\n        <div class=\"input-wrap\">\n          <input\n            class=\"form-input\"\n            id=\"couponcode\"\n            type=\"text\"\n            name=\"search_query_adv\"\n            value=\"\"\n            placeholder=\"{{lang 'cart.coupon_codes.coupon_code'}}\"\n            data-coupon-code-input>\n        </div>\n    </form>\n    <div data-coupon-errors></div>\n\n  </div>\n</aside>\n"}